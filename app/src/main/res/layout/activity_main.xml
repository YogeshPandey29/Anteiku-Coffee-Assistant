<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/customer_name"
            android:textStyle="bold|italic"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/customer_name_text_view"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Enter your name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/topping_options"
            android:textStyle="bold|italic"/>

        <CheckBox
            android:id="@+id/whipped_cream_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="Whipped Cream"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Chocolate"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cinnamon_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Cinnamon"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/ginger_milk_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Ginger Milk"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/vanilla_extract_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Vanilla Extract"
            android:textSize="16sp" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Quantity"
            android:textStyle="bold|italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:onClick="reduceQuantity"
                android:text="-" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:onClick="increaseQuantity"
                android:text="+" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:onClick="placeOrder"
            android:text="Place Your Order!" />


    </LinearLayout>


</ScrollView>